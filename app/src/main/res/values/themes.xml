<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreelanceArena" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/moderate_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/moderate_blue</item>
        <item name="colorOnSecondary">@color/light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/moderate_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FreelanceArena.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FreelanceArena.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FreelanceArena.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

</resources>