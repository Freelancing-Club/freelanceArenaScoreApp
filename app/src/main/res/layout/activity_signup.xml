<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/welcomeTextSignup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:fontFamily="@font/allerta_stencil"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Welcome!"/>

            <EditText
                android:id="@+id/edtNameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeTextSignup"
                android:layout_marginStart="60dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="60dp"
                android:autofillHints="name"
                android:background="@drawable/edt_text_bg"
                android:elevation="20dp"
                android:hint="Enter Your Name"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="#3F6275"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtEmailSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtNameSignup"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:autofillHints="name"
                android:background="@drawable/edt_text_bg"
                android:elevation="20dp"
                android:hint="Enter Your Reg Number"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="#3F6275"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtPasswordSignup"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/edt_text_bg"
                android:padding="15dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#3F6275"
                android:layout_below="@id/edtEmailSignup"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:hint="Enter Your Password"
                android:inputType="textPassword"/>

            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Sign Up"
                android:fontFamily="@font/allerta_stencil"
                android:textStyle="bold"
                android:stateListAnimator="@animator/click_animation"
                android:elevation="20dp"
                android:textColor="@color/white"
                android:background="@drawable/intro_bg_2"
                android:textSize="15sp"
                android:layout_below="@id/edtPasswordSignup"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:id="@+id/SignupLLM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/SocialSignup"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Registered ?"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/Signupbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="7dp"
                    android:text="Login"
                    android:textColor="#0037AC"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/AlternativesSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_below="@id/btnSignup"
                android:orientation="horizontal">
                <View
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="10dp"
                    android:background="#737373"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Or continue with"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="75dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="#737373" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/SocialSignup"
                android:layout_below="@id/AlternativesSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:padding="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin = "10dp"
                    android:elevation="20dp">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:stateListAnimator="@animator/click_animation"
                        android:background="@drawable/img_2"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin = "10dp"
                    android:elevation="20dp">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:stateListAnimator="@animator/click_animation"
                        android:background="@drawable/img_5"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="20dp">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:stateListAnimator="@animator/click_animation"
                        android:background="@drawable/img_13"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</ScrollView>